<!DOCTYPE html>
<html>
<head>
  <title>HackerNews</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div id='title'>
      <h2>Hacker News</h2>
    </div>
    <div id='authentication'>
      <% if current_user %>
        <%= render partial: 'sessions/destroy' %>
      <% else %>
        <%= render partial: 'sessions/login_form' %>
      <% end %>
    </div>
  </header>
  <div id="flash_warn" class="error_feedback"><%= flash[:warn] %></div>
<%= yield %>

</body>
</html>
